{
  "name": "trophy-hunter",
  "version": "1.0.0",
  "scripts": {
    "test": "npm run lint",
    "lint": "tslint --project ./tsconfig.json"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --project ./tsconfig.json --fix",
      "prettier --write",
      "git add"
    ]
  }
}
