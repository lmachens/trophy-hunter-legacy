{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "App Server",
      "cwd": "${workspaceRoot}/app/",
      "runtimeExecutable": "${workspaceRoot}/app/.meteor/local/dev_bundle/bin/npm",
      "restart": true,
      "timeout": 30000,
      "stopOnEntry": false,
      "sourceMaps": true,
      "protocol": "inspector",
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Admin Server",
      "cwd": "${workspaceRoot}/admin/",
      "runtimeExecutable": "${workspaceRoot}/admin/.meteor/local/dev_bundle/bin/npm",
      "restart": true,
      "timeout": 30000,
      "stopOnEntry": false,
      "sourceMaps": true,
      "protocol": "inspector",
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Project Server",
      "cwd": "${workspaceRoot}/project/",
      "runtimeExecutable": "${workspaceRoot}/project/.meteor/local/dev_bundle/bin/npm",
      "restart": true,
      "timeout": 30000,
      "stopOnEntry": false,
      "sourceMaps": true,
      "protocol": "inspector",
      "port": 9229
    }
  ]
}
