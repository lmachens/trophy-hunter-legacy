{
  "files.exclude": {
    "**/.git": true
  },
  "search.exclude": {
    "database": true,
    "**/node_modules": true,
    "**/.meteor/local": true,
    "jobs/imports": true,
    "app/imports": true,
    "project/imports": true,
    "*/packages": true,
    "imports/shared": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.meteor/local": true
  },
  "editor.formatOnSave": true,
  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.workingDirectories": ["./jobs", "./app", "./project", "./overwolf", "./.storybook"],
  "[markdown]": {
    "editor.formatOnSave": false
  }
}
